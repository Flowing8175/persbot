# Discord Bot Token
DISCORD_TOKEN=your_discord_token_here

# LLM Provider Settings
# Options: gemini, openai
ASSISTANT_LLM_PROVIDER=gemini
SUMMARIZER_LLM_PROVIDER=gemini
# Fallback if ASSISTANT_LLM_PROVIDER is not set
LLM_PROVIDER=gemini

# API Keys (Required based on provider)
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Model Configurations (Optional)
# Override specific models if needed
# GEMINI_MODEL_NAME=gemini-2.5-flash
# GEMINI_ASSISTANT_MODEL_NAME=gemini-2.5-flash
# GEMINI_SUMMARY_MODEL_NAME=gemini-2.5-pro

# OPENAI_MODEL_NAME=gpt-5-mini
# OPENAI_ASSISTANT_MODEL_NAME=gpt-5-mini
# OPENAI_SUMMARY_MODEL_NAME=gpt-5-mini
# OPENAI_FINETUNED_MODEL=ft:gpt-4o-mini-2024-07-18:org:name:id

# Fine-tuning Configuration
# Target User ID (The user whose messages will be treated as 'assistant' responses)
FINETUNE_TARGET_USER_ID=
# Source Channel IDs (Comma separated IDs where scraping will happen)
FINETUNE_SOURCE_CHANNEL_IDS=
# Minimum examples required to trigger fine-tuning
FINETUNE_MIN_EXAMPLES=10

# Auto Reply Channels (Comma separated IDs)
AUTO_REPLY_CHANNEL_IDS=

# Application Settings
LOG_LEVEL=INFO
SERVICE_TIER=flex

# Message Buffer Settings (Seconds)
MESSAGE_BUFFER_DELAY=2.5

# LLM Temperature (0.0 to 2.0)
TEMPERATURE=1.0
